<Window x:Class="CMFSystemForDillerAuthoCenter.CallWindow.CreateSaleContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMFSystemForDillerAuthoCenter.CallWindow"
        mc:Ignorable="d"
        Title="CreateSaleContractWindow" Height="700" Width="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Выбор сделки -->
            <TextBlock Grid.Row="0" Text="Выберите заказ*" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="DealComboBox" Grid.Row="1" Margin="0,0,0,10" DisplayMemberPath="DisplayInfo" SelectionChanged="DealComboBox_SelectionChanged"/>

            <!-- Данные продавца -->
            <TextBlock Grid.Row="2" Text="Данные продавца*" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="SellerNameTextBox" Grid.Row="3" Margin="0,0,0,5" Text="ООО Автоцентр"/>
            <TextBox x:Name="SellerAddressTextBox" Grid.Row="4" Margin="0,0,0,5" Text="г. Москва, ул. Примерная, д. 1"/>
            <TextBox x:Name="SellerPassportTextBox" Grid.Row="5" Margin="0,0,0,10" Text="ИНН 1234567890"/>

            <!-- Данные покупателя -->
            <TextBlock Grid.Row="6" Text="Данные покупателя*" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="BuyerLivingAddressTextBox" Grid.Row="7" Margin="0,0,0,5" ToolTip="Адрес проживания"/>
            <TextBox x:Name="BuyerRegisteredAddressTextBox" Grid.Row="8" Margin="0,0,0,5" ToolTip="Адрес регистрации"/>
            <TextBox x:Name="BuyerPassportTextBox" Grid.Row="9" Margin="0,0,0,10"/>

            <!-- Данные автомобиля -->
            <TextBlock Grid.Row="10" Text="Дополнительные данные автомобиля*" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="EngineNumberTextBox" Grid.Row="11" Margin="0,0,0,5" ToolTip="№ двигателя"/>
            <TextBox x:Name="ChassisNumberTextBox" Grid.Row="12" Margin="0,0,0,5" ToolTip="№ шасси (рамы)"/>
            <TextBox x:Name="MileageTextBox" Grid.Row="13" Margin="0,0,0,10" ToolTip="Пробег"/>

            <!-- Превью данных -->
            <TextBlock Grid.Row="14" Text="Превью данных договора" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="PreviewTextBox" Grid.Row="15" Height="150" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" Margin="0,0,0,10"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="16" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="GenerateContractButton" Content="Сохранить договор" Click="GenerateContractButton_Click" Margin="0,0,10,0" Width="150"/>
                <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Width="100"/>
            </StackPanel>

            <!-- Пояснение -->
            <TextBlock Grid.Row="14" Text="* — поля, обязательные для заполнения" FontSize="10" Foreground="Gray" Margin="0,120,0,10"/>
        </Grid>
    </ScrollViewer>
</Window>