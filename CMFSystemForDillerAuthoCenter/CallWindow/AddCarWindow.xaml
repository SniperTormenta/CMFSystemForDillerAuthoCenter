<Window x:Class="CMFSystemForDillerAuthoCenter.CallWindow.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMFSystemForDillerAuthoCenter.CallWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Добавить автомобиль" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Первая колонка -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Автомобиль" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Тип авто" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="TypeComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Легковушка"/>
                <ComboBoxItem Content="Пикап"/>
                <ComboBoxItem Content="Микроавтобус"/>
            </ComboBox>

            <TextBlock Text="Категория" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="B"/>
                <ComboBoxItem Content="C"/>
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="D"/>
            </ComboBox>

            <TextBlock Text="Марка" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="BrandTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Модель" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="ModelTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Год выпуска" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="YearComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="Тип двигателя" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="EngineComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Бензин"/>
                <ComboBoxItem Content="Дизель"/>
                <ComboBoxItem Content="Гибрид"/>
                <ComboBoxItem Content="Электрический двигатель"/>
            </ComboBox>

            <TextBlock Text="Привод" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="DriveComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Передний"/>
                <ComboBoxItem Content="Задний"/>
                <ComboBoxItem Content="Полный привод"/>
            </ComboBox>

            <TextBlock Text="Тип кузова" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="BodyTypeComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="SUV"/>
                <ComboBoxItem Content="Кроссовер"/>
                <ComboBoxItem Content="Седан"/>
                <ComboBoxItem Content="Хэтчбек"/>
                <ComboBoxItem Content="Пикап"/>
                <ComboBoxItem Content="Универсал"/>
                <ComboBoxItem Content="Купе"/>
                <ComboBoxItem Content="Кабриолет"/>
                <ComboBoxItem Content="Минивэн"/>
                <ComboBoxItem Content="Лимузин"/>
            </ComboBox>
        </StackPanel>

        <!-- Вторая колонка -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Объем двигателя (л)" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="EngineVolumeTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пробег (км)" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="MileageTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Цвет" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="ColorTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Руль" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="SteeringWheelComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Слева"/>
                <ComboBoxItem Content="Справа"/>
            </ComboBox>

            <TextBlock Text="Салон" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="InteriorTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Срок владения" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="OwnershipDurationTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Количество владельцев" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="OwnerCountTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Состояние" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="ConditionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Цена" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Статус" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="В продаже"/>
                <ComboBoxItem Content="Не доступна для продажи"/>
                <ComboBoxItem Content="Продана"/>
            </ComboBox>
        </StackPanel>

        <!-- Третья колонка -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Заметки" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="NotesTextBox" Height="100" AcceptsReturn="True" Margin="0,0,0,10"/>

                <TextBlock Text="Последний владелец" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="LastOwnerTextBox" Margin="0,0,0,10"/>

                <TextBlock Text="Код владельца" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="OwnerCodeTextBox" Margin="0,0,0,10"/>

                <TextBlock Text="Код площадки" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="LocationCodeTextBox" Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Grid.Row="1" HorizontalAlignment="Right">
                <Image x:Name="CarPhotoImage" Width="270" Height="195" Margin="0,0,0,10"/>
                <Button x:Name="LoadPhotoButton" Content="Загрузить фото" 
                        Style="{DynamicResource MaterialDesignRaisedButton}" 
                        Click="LoadPhotoButton_Click" Margin="0,0,0,10"/>
                <Button x:Name="SaveButton" Content="Сохранить" 
                        Style="{DynamicResource MaterialDesignRaisedButton}" 
                        Click="SaveButton_Click" Margin="0,0,0,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>