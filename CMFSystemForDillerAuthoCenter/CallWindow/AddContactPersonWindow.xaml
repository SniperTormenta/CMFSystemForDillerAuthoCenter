<Window x:Class="CMFSystemForDillerAuthoCenter.CallWindow.AddContactPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMFSystemForDillerAuthoCenter.CallWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddContactPersonWindow" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="FullNameTextBox" Grid.Row="0" Margin="0,0,0,10" materialDesign:HintAssist.Hint="ФИО"/>
        <TextBox x:Name="PhoneTextBox" Grid.Row="1" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Телефон"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="2" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Email"/>
        <TextBox x:Name="PositionTextBox" Grid.Row="3" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Должность"/>
        <TextBox x:Name="NotesTextBox" Grid.Row="4" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Заметки"/>
        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>