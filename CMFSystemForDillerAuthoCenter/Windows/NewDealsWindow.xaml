<Window x:Class="CMFSystemForDillerAuthoCenter.Windows.NewDealsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMFSystemForDillerAuthoCenter.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        Title="NewDealsWindow" Height="1080" Width="1920">

    <Grid>
        <!-- Сайдбар слева -->
        <Border Width="200" Background="#FF2A2E40" HorizontalAlignment="Left">
            <StackPanel>
                <ListView Background="Transparent" BorderThickness="0">
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCircle" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Профиль" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Email" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Почта" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="Gotomainmenu" Height="50" >
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Главная" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                                <TextBlock Text="Сделки" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                            </StackPanel>
                            <materialDesign:PackIcon Kind="Circle" Width="10" Height="10" Foreground="Red" Margin="35,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Phone" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Звонки" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Счета" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Calendar" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Календарь" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="People" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Клиенты" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ShoppingCart" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Товары" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PeopleOutline" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Сотрудники" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Settings" Width="24" Height="24" Margin="10,0" Foreground="White"/>
                            <TextBlock Text="Настройки" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Margin="200,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель управления -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,10,20,10">
                <TextBlock Text="Переключение вида" FontSize="24" FontWeight="Bold" Margin="0,0,30,0" VerticalAlignment="Center"/>
                <ToggleButton x:Name="ViewToggleButton" 
                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                              Width="118" 
                              Height="50" 
                              FontSize="11" 
                              Padding="9" 
                              Checked="ViewToggleButton_Checked" 
                              Unchecked="ViewToggleButton_Unchecked"/>
            </StackPanel>

            <!-- Контейнер для вариантов -->
            <ContentControl x:Name="DealsContent" Grid.Row="1" Margin="20"/>
        </Grid>
    </Grid>
</Window>